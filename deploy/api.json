{
  "openapi": "3.0.0",
  "info": {
    "title": "Serverless Library System API",
    "description": "This is the Swagger Specification of the Serverless Library System API",
    "version": "1.0.1"
  },
  "servers": [{ "url": "http://libraryApi.atom.cloud/" }],
  "tags": [
    { "name": "user", "description": "Operations that a user can perform" }
  ],
  "paths": {
    "/books": {
      "get": {
        "tags": ["user"],
        "description": "Get all the books from DynamoDB",
        "responses": {
          "200": {
            "description": "Successfully sent the books list",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#components/schemas/bookResponse"
                }
              }
            }
          }
        },
        "x-amazon-apigateway-integration": {
          "uri": "arn:aws:apigateway:${aws_region}:lambda:path/2015-03-31/functions/${get_lambda_arn}/invocations",
          "passthroughBehavior": "when_no_match",
          "httpMethod": "POST",
          "timeoutInMillis": "${lambda_identity_timeout}",
          "type": "aws_proxy",
          "contentHandling": "CONVERT_TO_TEXT"
        },
        "x-amazon-apigateway-auth": {
          "type": "NONE"
        },
        "x-amazon-apigateway-api-key-source": "HEADER"
      },
      "post": {
        "tags": ["user"],
        "description": "Add a book to list of books in DynamoDB",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/bookRequest" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully added book in DynamoDB",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#components/schemas/bookResponse"
                }
              }
            }
          }
        },
        "x-amazon-apigateway-integration": {
          "uri": "arn:aws:apigateway:${aws_region}:lambda:path/2015-03-31/functions/${get_lambda_arn}/invocations",
          "passthroughBehavior": "when_no_match",
          "httpMethod": "POST",
          "timeoutInMillis": "${lambda_identity_timeout}",
          "type": "aws_proxy",
          "contentHandling": "CONVERT_TO_TEXT"
        },
        "x-amazon-apigateway-auth": {
          "type": "NONE"
        },
        "x-amazon-apigateway-api-key-source": "HEADER"
      },
      "put": {
        "tags": ["user"],
        "description": "Update a book in DynamoDB",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/bookRequest" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully updated the book details in DynamoDB",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#components/schemas/bookResponse"
                }
              }
            }
          }
        },
        "x-amazon-apigateway-integration": {
          "uri": "arn:aws:apigateway:${aws_region}:lambda:path/2015-03-31/functions/${get_lambda_arn}/invocations",
          "passthroughBehavior": "when_no_match",
          "httpMethod": "POST",
          "timeoutInMillis": "${lambda_identity_timeout}",
          "type": "aws_proxy",
          "contentHandling": "CONVERT_TO_TEXT"
        },
        "x-amazon-apigateway-auth": {
          "type": "NONE"
        },
        "x-amazon-apigateway-api-key-source": "HEADER"
      },
      "options": {
        "responses": {
          "200": {
            "description": "Successfully sent headers to the frontend",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#components/schemas/bookResponse"
                }
              }
            }
          }
        },
        "x-amazon-apigateway-integration": {
          "uri": "arn:aws:apigateway:${aws_region}:lambda:path/2015-03-31/functions/${get_lambda_arn}/invocations",
          "passthroughBehavior": "when_no_match",
          "httpMethod": "POST",
          "timeoutInMillis": "${lambda_identity_timeout}",
          "type": "aws_proxy",
          "contentHandling": "CONVERT_TO_TEXT"
        },
        "x-amazon-apigateway-auth": {
          "type": "NONE"
        },
        "x-amazon-apigateway-api-key-source": "HEADER"
      },
      "delete": {
        "tags": ["user"],
        "description": "Delete a book from DynamoDB",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/bookRequest" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully deleted the book from DynamoDB",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#components/schemas/bookResponse"
                }
              }
            }
          }
        },
        "x-amazon-apigateway-integration": {
          "uri": "arn:aws:apigateway:${aws_region}:lambda:path/2015-03-31/functions/${get_lambda_arn}/invocations",
          "passthroughBehavior": "when_no_match",
          "httpMethod": "POST",
          "timeoutInMillis": "${lambda_identity_timeout}",
          "type": "aws_proxy",
          "contentHandling": "CONVERT_TO_TEXT"
        },
        "x-amazon-apigateway-auth": {
          "type": "NONE"
        },
        "x-amazon-apigateway-api-key-source": "HEADER"
      },
      "/books/issue": {
        "put": {
          "tags": ["user"],
          "description": "Update a book in DynamoDB",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/bookRequest" }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Successfully updated the book details in DynamoDB",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#components/schemas/bookResponse"
                  }
                }
              }
            }
          },
          "x-amazon-apigateway-integration": {
            "uri": "arn:aws:apigateway:${aws_region}:lambda:path/2015-03-31/functions/${get_lambda_arn}/invocations",
            "passthroughBehavior": "when_no_match",
            "httpMethod": "POST",
            "timeoutInMillis": "${lambda_identity_timeout}",
            "type": "aws_proxy",
            "contentHandling": "CONVERT_TO_TEXT"
          },
          "x-amazon-apigateway-auth": {
            "type": "NONE"
          },
          "x-amazon-apigateway-api-key-source": "HEADER"
        }
      },
      "/books/return": {
        "put": {
          "tags": ["user"],
          "description": "Update a book in DynamoDB",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/bookRequest" }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Successfully updated the book details in DynamoDB",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#components/schemas/bookResponse"
                  }
                }
              }
            }
          },
          "x-amazon-apigateway-integration": {
            "uri": "arn:aws:apigateway:${aws_region}:lambda:path/2015-03-31/functions/${get_lambda_arn}/invocations",
            "passthroughBehavior": "when_no_match",
            "httpMethod": "POST",
            "timeoutInMillis": "${lambda_identity_timeout}",
            "type": "aws_proxy",
            "contentHandling": "CONVERT_TO_TEXT"
          },
          "x-amazon-apigateway-auth": {
            "type": "NONE"
          },
          "x-amazon-apigateway-api-key-source": "HEADER"
        }
      }
    }
  },
  "components": {
    "schemas": {
      "bookResponse": {
        "type": "object",
        "properties": {
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "book_name": {
                  "type": "string",
                  "example": "Zero to One"
                },
                "book_id": {
                  "type": "string",
                  "example": "1"
                }
              }
            }
          },
          "status": {
            "type": "string",
            "example": "success"
          }
        }
      },
      "bookRequest": {
        "type": "object",
        "properties": {
          "book_name": {
            "type": "string",
            "example": "Mindset"
          },
          "book_id": {
            "type": "string",
            "example": "2"
          }
        }
      }
    }
  }
}
